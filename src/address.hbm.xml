<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- Class Name And Table Name -->
	<class name="com.domain.Address" table="Address_TB">
		<!-- increment -->
		<id name="id" column="ADDRESS_ID" type="int" length="20">
			<generator class="increment"></generator>
		</id>
		<!-- Address property -->
		<property name="country" type="string" length="20"></property>
		<property name="state" type="string" length="20"></property>
		<property name="city" type="string" length="20"></property>
	</class>
</hibernate-mapping>


